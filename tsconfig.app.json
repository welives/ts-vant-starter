{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noEmit": true
  },
  "include": ["env.d.ts", "auto-imports.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "node_modules"]
}
